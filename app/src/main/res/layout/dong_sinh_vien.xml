<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<TextView
    android:id="@+id/text_view_ten"
    android:textColor="#aeacad"
    android:textStyle="bold"
    android:text="ten sinh vien"
    android:textSize="20dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" />
    <TextView
        android:layout_marginTop="5dp"
        android:id="@+id/text_view_namsinh"
        android:layout_below="@+id/text_view_ten"
        android:textColor="#aeacad"
        android:textStyle="bold"
        android:text="Namsinh :1999"
        android:textSize="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/text_view_diachi"
        android:layout_alignBaseline="@+id/text_view_namsinh"
        android:layout_marginLeft="160dp"
        android:layout_toRightOf="@+id/text_view_namsinh"
        android:textColor="#aeacad"
        android:textStyle="bold"
        android:text="Da Nang"
        android:textSize="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <ImageView
        android:id="@+id/image_view_edit"
        android:layout_marginLeft="120dp"
        android:layout_toRightOf="@+id/text_view_ten"
        android:src="@android:drawable/ic_menu_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <ImageView
        android:id="@+id/image_view_delete"
        android:layout_toRightOf="@+id/image_view_edit"
        android:src="@android:drawable/ic_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</RelativeLayout>